---
import Nav from "../components/Nav/Nav.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen bg-primary text-white scrollbar scrollbar-thumb-primary scrollbar-w-2 scrollbar-corner-rounded-xl">
	    <Nav />
		<main class="flex-1">
			<slot/>
		</main>
	</body>
</html>
<style is:global>
	::-webkit-scrollbar {
		height: .6rem;
		width: .5rem;
	}

	::-webkit-scrollbar-track {
		background: rgba(33, 39, 55, .6);
	}

	::-webkit-scrollbar-track:hover {
		background: rgba(33, 39, 55);
	}

	::-webkit-scrollbar-thumb {
		background: rgba(255, 107, 1, .6);
		border-radius: 0.25rem;
	}

	::-webkit-scrollbar-thumb:hover {
		background: rgba(255, 107, 1);
		border-radius: 0.25rem;
	}
</style>
