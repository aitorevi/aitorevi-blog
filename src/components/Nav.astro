---
import {
    Astronav,
    MenuItems,
    MenuIcon,
} from "astro-navbar";
const path = Astro.url.pathname;
---
<header class="w-full bg-opacity-90 lg:flex justify-between px-6 py-3 lg:max-w-none lg:px-8 lg:py-3 mx-auto border-b-secondary border-b-[0.75px] fixed z-10 font-ibm">
    <Astronav closeOnClick>
        <div class="flex w-full lg:w-auto justify-between items-center text-tertiary">
            <a href="/" class="flex items-center text-2xl ml-2 cursor-pointer text-inherit text-4xl hover:text-secondary transition ease-linear delay-150 duration-300">aitorevi</a>
            <div class="lg:hidden hover:text-secondary transition ease-linear delay-150 duration-300 h-8">
                <MenuIcon class="w-8 h-8"/>
            </div>
        </div>
        <MenuItems class="hidden lg:flex lg:w-40 items-center text-xl">
            <a href="/" class="flex p-4 justify-center  hover:text-secondary transition ease-linear delay-150 hover:-translate-y-1 hover:scale-105 duration-300">Blog</a>
            <a href="/blog" class="flex p-4 justify-center  hover:text-secondary transition ease-linear delay-150 hover:-translate-y-1 hover:scale-105 duration-300">Katas</a>
        </MenuItems>
    </Astronav>
</header>