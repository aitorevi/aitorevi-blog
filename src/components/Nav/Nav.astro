---
import {
    Astronav,
    MenuItems,
    MenuIcon,
    OpenIcon,
    CloseIcon
} from "astro-navbar";
const path = Astro.url.pathname;
---
<header class="w-full bg-tertiary bg-opacity-95 md:flex px-6 py-3 md:max-w-none md:px-8 md:py-3 mx-auto fixed z-10 font-ibm">
    <Astronav>
        <div class="flex w-full md:w-auto justify-between items-center text-gray-800">
            <a href="/"
               class="flex items-center ml-2 cursor-pointer text-inherit text-4xl hover:opacity-60 transition ease-linear delay-50 duration-150">aitorevi</a>
            <div class="md:hidden hover:text-secondary transition ease-linear delay-150 duration-300 h-8 mb-2">
                <MenuIcon>
                    <OpenIcon>
                        <div class="w-8 h-8">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20"
                                 stroke="currentColor">
                                <path d="M3.75 6.75h16.5M3.75 12h16.5M12 17.25h8.25"/>
                            </svg>
                        </div>
                    </OpenIcon>
                    <CloseIcon>
                        <div class="w-8 h-8">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20"
                                 stroke="currentColor">
                                <path d="M3.75 6.75h16.5M3.75 12h16.5M12 17.25h8.25"/>
                            </svg>
                        </div>
                    </CloseIcon>
                </MenuIcon>
            </div>
        </div>
        <MenuItems class="hidden md:ml-20 md:mt-2 md:flex md:w-40 items-center text-lg">
            <a href="/blog"
               class="flex p-4 justify-center text-primary hover:text-opacity-60 transition ease-linear delay-50 duration-200">Blog
            </a>
            <!--
            <a href="/katas"
               class="flex p-4 justify-center  hover:text-secondary transition ease-linear delay-150 hover:-translate-y-1 hover:scale-105 duration-300">Katas
            </a>
            -->
        </MenuItems>
    </Astronav>
</header>